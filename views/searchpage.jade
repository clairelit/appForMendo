extends layout

block content
  .row
    .col-xs-3
      a(href='/homepage')
        i.fa.fa-home.homeIcon.fa-5x
    .col-xs-9
      h3 Browse through Transmission Records
  
    
  .row
  .col-xs-12
    .container
      .row.headings
        div
          .col-xs-2
            h4 Surname

          .col-xs-2
              h4 First Name

          .col-xs-2
              h4 Town

          .col-xs-2
              h4 County

          .col-xs-2
              h4 Country

          .col-xs-2
              h4 Year
            
  .row
  .col-xs-12
    .container
      .row.headings
        div
          for person, i in allPeople
            .row.searchRow
              .col-xs-2
                span #{person.surname}
              .col-xs-2
                span #{person.firstName}
              .col-xs-2
                span #{person.town}
              .col-xs-2
                span #{person.county}
              .col-xs-2
                span #{person.country}
              .col-xs-2
                span #{person.year}
              hr.noshade.size=8
              p.moreInfoDiv Year of Transmission - #{person.year} 
              p.moreInfoDiv Date of Transmission - #{person.date} 
              p.moreInfoDiv Transmission Granted? - #{person.transmission}
              p.moreInfoDiv #{person.moreInformation}
              img(src = "#{person.photoLocation}")
              hr.noshade.size=8
              